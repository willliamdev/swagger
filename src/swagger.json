{
  "openapi": "3.0.0",
  "info": {
    "title": "Just an API",
    "description": "Documentation to API challenge solid",
    "version": "1.0.0",
    "contact": {
      "email": "willliam.dev@gmail.com"
    }
  },
  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "description": "To create a new user you have to send an object containing name and email",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Jake Peralta",
                  "email": "jakeperalta99@mail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {
                    "id": "09e4eb0f-fb9b-4717-9771-254af351aae9",
                    "admin": false,
                    "name": "Jake Peralta",
                    "email": "jakeperalta99@mail.com",
                    "created_at": "2022-05-30T11:22:56.407Z",
                    "updated_at": "2022-05-30T11:22:56.407Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "An email can only be linked to 1 user",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  },
                  "example": {
                    "Error": "Email is already being used"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/users/{user_id}/admin": {
      "patch": {
        "tags": [
          "Users"
        ],
        "summary": "user as admin",
        "description": "To Turn an user into a adminstrator you need send an valid user id on path",
        "parameters": [
          {
            "in": "path",
            "name": "user_id",
            "description": "user id to fetch",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "User is now an admin",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "string"
                    },
                    "admin": {
                      "type": "boolean"
                    },
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    },
                    "created_at": {
                      "type": "date"
                    },
                    "updated_at": {
                      "type": "date"
                    }
                  },
                  "example": {
                    "id": "09e4eb0f-fb9b-4717-9771-254af351aae9",
                    "admin": true,
                    "name": "Jake Peralta",
                    "email": "jakeperalta99@mail.com",
                    "created_at": "2022-05-30T11:22:56.407Z",
                    "updated_at": "2022-05-30T11:22:56.407Z"
                  }
                }
              }
            }
          },
          "400": {
            "description": "if id sended does not match a user's id",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "error": {
                      "type": "string"
                    }
                  }
                },
                "example": {
                  "error": "User not exist"
                }
              }
            }
          }
        }
      }
    }
  }
}