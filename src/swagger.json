  "paths": {
    "/users": {
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Create a new user",
        "description": "..........",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "Jake Peralta",
                  "description": "jakeperalta99@mail.com"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created user"
          },
          "400": {
            "description": "Email is already being used"
          }
        }
      }
    }
  }
}